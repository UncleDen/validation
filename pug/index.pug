doctype html
html(lang="ru")
 head
  meta(charset="utf-8")
  title= "Test work"
  link(rel="stylesheet" href="css/main.css")
  link(rel="stylesheet" href="css/font-awesome.min.css")
  script(src="js/jquery-3.1.1.min.js")
  script(src="js/app.js")
 body
  form(action="#" method="POST" id="regForm")
   div.title= "Register"
   div.form-content
    ul
     div.input
      label.label= "Name"
      input(type="text" name="name" id="name" class="textbox empty")
      i.fa.fa-check#check-name(style="opacity:0;")
     div.error-name(style="display:none;background:#ff6a6a;")
     div.input
      label.label= "Email"
      input(type="text" name="email" id="email" class="textbox empty")
      i.fa.fa-check#check-email(style="opacity:0;")
     div.error-email(style="display:none;background:#ff6a6a;")
     div.input
      label.label= "Password"
      input(type="password" name="password" id="password" class="textbox empty")
      i.fa.fa-check#check-password(style="opacity:0;")
     div.error-password(style="display:none;background:#ff6a6a;")
     div.input
      label.label= "CVV"
       i.question.fa.fa-question-circle
        i#cvv-info(style="display:none;")
      input(type="text" name="cvv" id="cvv" class="textbox empty")
      i.fa.fa-check#check-cvv(style="opacity:0;")
     div.error-cvv(style="display:none;background:#ff6a6a;")
   div.button 
    input(type="button" id="send" value="submit")